<div class="page-header">
  <%= link_to trucks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_truck_path(@truck), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show truck</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @truck.name %></dd>

  <dt>Location:</dt>
  <dd><%= @truck.location %></dd>

  <dt>Latitude:</dt>
  <dd><%= @truck.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @truck.longitude %></dd>

</dl>
